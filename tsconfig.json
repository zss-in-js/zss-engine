{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "strict": true,
    "target": "ES2022",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
